[Unit]
Description=SSO server daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/tdd-auth/Single-Sign-On/src/
ExecStart=/home/tdd-auth/Single-Sign-On/env/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/tdd-auth/Single-Sign-On/src/sso_server.sock sso_server.wsgi:application

[Install]
WantedBy=multi-user.target